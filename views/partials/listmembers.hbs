<table class="ui celled table">
    <thead>
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    {{#each group.members}}
        <tr>
            <td>
                {{firstname}}
            </td>
            <td>
                {{lastname}}
            </td>
            <td>
                {{email}}
            </td>
            <td>
                <a href="/group/{{../group.id}}/deletemember/{{id}}" class="ui icon button">
                    <i class="icon trash"></i>
                </a>
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>