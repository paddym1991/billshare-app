<form class="ui raised segment form" action="/expense/{{expense.id}}/addpayment" method="POST">
    <h3 class="ui header">Add Payment</h3>
    <div class="two fields">
        <div class="field">
            <label>Title</label>
            <input placeholder="Title" type="text" name="title">
        </div>
        <div class="field">
            <label>Paid by</label>
            <select class="ui dropdown" name="payer">

                {{#each expense.members}}
                    <option value="{{firstname}} {{lastname}}">{{firstname}} {{lastname}}</option>
                {{/each}}

            </select>
        </div>
        <div class="field">
            <label>Amount</label>
            <input placeholder="00" type="number" name="amount">
        </div>
    </div>
    <button class="ui blue submit button">Add Payment</button>
</form>
