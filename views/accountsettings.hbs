{{> menu id="accountsettings"}}

<div class="ui two column grid basic middle aligned segment">
    <div class="column">
        <form class="ui stacked segment form" action="/accountsettings/update" method="POST">
            <h3 class="ui header">Update Account</h3>
            <div class="two fields">
                <div class="field">
                    <label>First Name</label>
                    <input placeholder="First Name" type="text" name="firstname" value="{{user.firstName}}" required>
                </div>
                <div class="field">
                    <label>Last Name</label>
                    <input placeholder="Last Name" type="text" name="lastname" value="{{user.lastName}}" required>
                </div>
            </div>
            <div class="field">
                <label>Email</label>
                <input placeholder="Email" type="text" name="email" value="{{user.email}}" required>
            </div>
            <div class="field">
                <label>Password</label>
                <input placeholder="Password" type="password" name="password" value="{{user.password}}" required>
            </div>
            <button class="ui blue submit button">Submit</button>
        </form>
    </div>
</div>